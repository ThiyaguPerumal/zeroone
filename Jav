try {
            // Constructing the command to launch PuTTY via ProcessBuilder
            String command = String.format("\"C:\\Program Files\\PuTTY\\putty.exe\" -ssh %s@%s -pw %s -P %d", username, host, password, port);

            // Start the process
            ProcessBuilder processBuilder = new ProcessBuilder(command);
            processBuilder.redirectErrorStream(true);
            Process process = processBuilder.start();

            // Read the output of the PuTTY process
            BufferedReader reader = new BufferedReader(new InputStreamReader(process.getInputStream()));
            String line;
            while ((line = reader.readLine()) != null) {
                System.out.println(line);  // Print the output of the command (e.g., df -h)
            }

            // Wait for the process to finish
            process.waitFor();
        } catch (IOException | InterruptedException e) {
            e.printStackTrace();
        }
